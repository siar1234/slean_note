<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/view_note">

    <TextView
        android:id="@+id/show_title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:textIsSelectable="true"
        android:overScrollMode="never"
        android:textColor="@color/black"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginVertical="40dp"
        android:scrollbars="vertical"
        android:overScrollMode="never"
        android:background="@color/transparent">

    <TextView
        android:id="@+id/show_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_marginHorizontal="10dp"
        android:textIsSelectable="true"
        android:textColor="@color/black"/>

    </ScrollView>

    <Button
        android:id="@+id/btn_back_show"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="?selectableItemBackground"
        android:text="@string/icons_back"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/icons_font"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp">

        <Button
            android:id="@+id/btn_detail_show"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="?selectableItemBackground"
            android:text="@string/icons_more_info"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/icons_font"
            style="?android:attr/buttonBarButtonStyle" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="?selectableItemBackground"
        android:text="@string/icons_edit"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/icons_font"/>

</RelativeLayout>