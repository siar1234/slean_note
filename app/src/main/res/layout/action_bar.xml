<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/blue"
    android:layout_alignParentTop="true"
    android:id="@+id/actionBar">

        <Button
            android:id="@+id/btn_show_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7.5dp"
            android:layout_marginLeft="7.5dp"
            android:layout_marginTop="7.5dp"
            android:layout_marginEnd="7.5dp"
            android:layout_marginRight="7.5dp"
            android:layout_marginBottom="7.5dp"
            android:background="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_menu"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="7.5dp"
            android:background="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/icons_font"
            android:textSize="25sp"
            android:text="@string/icons_check"
            android:textColor="@color/white"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/folder_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textSize="25sp" />

        <Button
            android:id="@+id/btn_ShowPopupMenu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="7.5dp"
            android:background="?selectableItemBackgroundBorderless"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_sort"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="7.5dp"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_trash"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/moveButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="7.5dp"
            android:layout_marginRight="55dp"
            android:layout_marginEnd="55dp"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_move_folder"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="7.5dp"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_times"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_okOnRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?selectableItemBackgroundBorderless"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="7.5dp"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_check"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:visibility="gone"/>

</RelativeLayout>