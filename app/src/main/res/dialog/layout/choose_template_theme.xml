<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_template"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:padding="15dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lightTheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/darkTheme"
            android:fontFamily="@font/icons_font"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:text="@string/icons_check"
            android:gravity="center"/>

        <TextView
            android:id="@+id/darkTheme"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/lightTheme"
            android:fontFamily="@font/icons_font"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="15dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:background="?selectableItemBackground"
            android:fontFamily="@font/icons_font"
            android:gravity="center"
            android:text="@string/icons_times"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:background="?selectableItemBackground"
            android:gravity="center"
            android:text="@string/icons_check"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/icons_font"/>

    </RelativeLayout>
</LinearLayout>